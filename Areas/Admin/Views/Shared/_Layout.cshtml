<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoSprint</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoSprint.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar-dark no-print">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Admin" asp-action="Index"><img
                        src="~/Img/Logo.png" alt=""></a>
                <button class="navbar-toggler corsecundaria" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon corsecundaria"></span>
                    
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link letra" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link letra" asp-area="Admin" asp-controller="Admin" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link letra" asp-area="Admin" asp-controller="Produto" asp-action="Index">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link letra" asp-area="Admin" asp-controller="Categoria" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link letra" asp-area="Admin" asp-controller="Banner" asp-action="ListaBanners">Banners</a>
                        </li>
                        <li class="nav-item letra"><a class="nav-link" asp-area="Admin" asp-controller="Usuario" asp-action="Index">Usuario</a>
                        </li>
                        <li class="nav-item letra">
                            <a class="nav-link" asp-area="Admin" asp-controller="Usuario" asp-action="Sair">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom no-print">
        <div class="container">
            &copy; 2023 - ProjetoSprint - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
