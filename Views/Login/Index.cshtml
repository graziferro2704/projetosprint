@model App.Models.Usuario
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<hr />
<div class="container col-12 col-lg-6">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" class="form-control bg-transparent" />
            <span asp-validation-for="Login" class="text-danger  .bg-transparent"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label" ></label>
            <input type="password" asp-for="Senha" class="form-control bg-transparent" />
            <span asp-validation-for="Senha" class="text-danger .bg-transparent"></span>
    
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p class="text-danger">@ViewBag.ErrorMessage</p>
        } 
        <div class="form-group text-center mt-3 bg-transparent">
            <input type="submit" value="Entrar" class="btn btn-outline-dark bg-transparent" />
            <span class="text-dark"></span>
        </div>
    </form>
</div>

<div class="mt-4">
    <h5> Contato: </h5>
    <p> Caso não tenha uma coruja disponível, <br>
        entre em contato através do nosso <br>
        WhatsApp: <br>
        90 990767676 
    </p>
</div>
<style>
    h1 {
        font-family: Harrington;
        text-align: center;
    }
    div > label {
        font-family: Harrington;
    }
    div > input {
        font-family: Harrington;
    }
    p {
        font-family: Harrington;
        text-shadow: 4px 4px 4px gray;
    }
    h5 {
        font-family: Harrington;
        text-shadow: 4px 4px 4px gray;
    }
</style>